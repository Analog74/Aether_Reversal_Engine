{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.local/schemas/manifest.v1.json",
  "title": "Target MANIFEST.json (v1)",
  "type": "object",
  "required": ["schema_version", "binaries"],
  "properties": {
    "schema_version": {"type": "integer", "enum": [1]},
    "binaries": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["binary_name", "binary_path", "exec_dir"],
        "properties": {
          "binary_name": {"type": "string"},
          "binary_path": {"type": "string"},
          "exec_dir": {"type": "string"}
        },
        "additionalProperties": true
      }
    },
    "input": {"type": "string"},
    "bundle_index_rel": {"type": "string"},
    "bundle_inventory_run_id": {"type": "string"}
  },
  "additionalProperties": true
}
